<script>
const quotes = [
  "Who actually reads these?",
  "T!tan is so cool - so is s4turn.",
  "Mateooooooooooooooooooooooooo",
  "these games are so tuff!",
  "rip n3bula.",
  "is n3bula up yet?",
  "TYSM S4turn <3",
  "is this update even good ",
  "I spent hours on this update",
  "loading...",
  "im the only one still with nexora? - s4turn. Yes - T!tan.",
  "loading games..."
];

document.getElementById("quote").textContent =
  quotes[Math.floor(Math.random() * quotes.length)];

setTimeout(() => {
  document.getElementById("loading").style.display = "none";
  document.getElementById("app").style.display = "block";
}, 2300);

// NEW FUNCTIONS FOR IFRAME
function openGame(url) {
  const overlay = document.getElementById("game-overlay");
  const iframe = document.getElementById("game-iframe");
  iframe.src = url; // Set the URL
  overlay.style.display = "block"; // Show the overlay
  document.body.style.overflow = "hidden"; // Prevent background scrolling
}

function closeGame() {
  const overlay = document.getElementById("game-overlay");
  const iframe = document.getElementById("game-iframe");
  iframe.src = ""; // Clear URL to stop game audio/loading
  overlay.style.display = "none"; // Hide the overlay
  document.body.style.overflow = "auto"; // Re-enable background scrolling
}

function filterImages() {
  const q = document.getElementById("search").value.toLowerCase();
  const items = document.querySelectorAll(".item");
  const noResults = document.getElementById("no-results");
  let matches = 0;

  items.forEach(item => {
    const title = item.dataset.title.toLowerCase();
    if (title.includes(q)) {
      item.style.display = "block";
      matches++;
    } else {
      item.style.display = "none";
    }
  });

  noResults.style.display = matches === 0 ? "block" : "none";
}
</script>

</body>
</html>
           
        </div>
    </div>

    <script>
        const panel = document.getElementById("navPanel");
        const ham = document.getElementById("hamBtn");
        const mainLinks = document.getElementById("mainLinks");
        const settingsMenu = document.getElementById("settingsMenu");
        
        const panicInput = document.getElementById("panicUrlInput");
        const shortcutToggle = document.getElementById("shortcutToggle");
        const panicKeyInput = document.getElementById("panicKeyInput");

        function initSite() {
            if (sessionStorage.getItem('sidebarOpen') === 'true') handleNav(true);
            if (localStorage.getItem('panicShortcutEnabled') === null) {
                localStorage.setItem('panicShortcutEnabled', 'true');
            }
            panicInput.value = localStorage.getItem('panicLink') || 'https://classroom.google.com';
            shortcutToggle.checked = localStorage.getItem('panicShortcutEnabled') === 'true';
            panicKeyInput.value = localStorage.getItem('panicKey') || 'x';
        }

        function doPanic() {
            let url = panicInput.value.trim() || 'https://classroom.google.com';
            if (!url.startsWith('http://') && !url.startsWith('https://')) {
                url = 'https://' + url;
            }
            window.open(url, '_blank');
        }

        function saveSettings() {
            localStorage.setItem('panicLink', panicInput.value);
            localStorage.setItem('panicShortcutEnabled', shortcutToggle.checked);
            localStorage.setItem('panicKey', panicKeyInput.value.toLowerCase());
        }

        document.addEventListener('keydown', (e) => {
            if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') return;
            const targetKey = (panicKeyInput.value || 'x').toLowerCase();
            if (shortcutToggle.checked && e.ctrlKey && e.key.toLowerCase() === targetKey) {
                e.preventDefault();
                doPanic();
            }
        });

        function handleNav(isOpen) {
            if (isOpen) {
                const isSettings = settingsMenu.style.display === "block";
                panel.style.width = isSettings ? "350px" : "250px";
                ham.style.display = "none";
                sessionStorage.setItem('sidebarOpen', 'true');
            } else {
                panel.style.width = "0";
                ham.style.display = "block";
                sessionStorage.setItem('sidebarOpen', 'false');
                setTimeout(() => {
                    mainLinks.style.display = "block";
                    settingsMenu.style.display = "none";
                }, 400);
            }
        }

        function toggleSettings(isSettings) {
            if (isSettings) {
                panel.style.width = "350px";
                mainLinks.style.display = "none";
                settingsMenu.style.display = "block";
            } else {
                if (panel.style.width !== "0" && panel.style.width !== "0px") {
                    panel.style.width = "250px";
                }
                mainLinks.style.display = "block";
                settingsMenu.style.display = "none";
            }
        }

        function changeContent(pageId) {
            const pages = document.getElementsByClassName('page-content');
            for (let p of pages) p.classList.remove('active-page');
            document.getElementById(pageId).classList.add('active-page');
            handleNav(false); 
        }
    </script>
</body>
</html>
